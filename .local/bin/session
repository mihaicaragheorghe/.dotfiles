#!/usr/bin/env bash

if [[ ! -z $1 ]]; then
    project_path=$(realpath $1)
else
    project_path=$(find ~/Projects ~/source -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $project_path ]]; then
    echo "No selection made."
    exit 0
fi

session_name=$(basename "$project_path" | tr . _)

# Kill existing session if exists
if tmux has-session -t="$session_name" 2>/dev/null; then
    tmux kill-session -t "$session_name"
fi

tmux new-session -d -s "$session_name" -c "$project_path" -n "src"
tmux new-window -d -t $session_name -n "cmd" -c "$project_path"
tmux send-keys -t $session_name:src "nvim ." C-m

if [[ -z $TMUX ]]; then
    tmux attach-session -t "$session_name"
else
    tmux switch-client -t "$session_name"
fi

